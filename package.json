{
  "name": "vuex-cognito-sync",
  "version": "0.2.0",
  "description": "A Vue.js Vuex module for AWS Cognito Sync",
  "main": "dist/index.js",
  "repository": "https://github.com/LightmakerCanada/vuex-cognito-sync.git",
  "author": "Adam Biggs <adam.biggs@lightmaker.com>",
  "license": "MIT",
  "dependencies": {
    "amazon-cognito-js": "^1.1.0",
    "aws-sdk": "^2.7.21",
    "vuex": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "conventional-changelog-cli": "^1.2.0",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "sinon": "^1.17.7",
    "tap-xunit": "^1.7.0"
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "eslint src/**.js test/**.js",
    "test": "npm run lint && ava",
    "test-ci": "npm run lint && ava --tap | tap-xunit > $CIRCLE_TEST_REPORTS/ava/results.xml",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "preversion": "npm test",
    "version": "npm run changelog && git add CHANGELOG.md",
    "prepublish": "npm run build"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
